<% include ../partials/header.ejs%>
<div>
    <h2 class="text-center">Meet Our Staffs</h2>
    <br>
    <% users.forEach(function(user){%>
        <div class="well well-lg">
            <img src="<%= user.displayPic.image%>" class="staff-image"  alt="">
            <br/>
            <h3 class="staff-header"><%= user.firstname%> <%= user.lastname%> <span class="staff-span">Level <%= user.level%></span></h3>
            <div>
                <a href="/user/<%=user._id%>" class="btn btn-sm btn-success staff-link">View Profile</a>
            </div>
        </div>        
    <%})%>
</div>
<div class="row text-center">
    <% if(pages && pages > 0){%>
        <ul class="pagination text-center">
            <%if (current == 1){%>
            <li class="disabled"><a>«</a></li>
            <%} else { %>
            <li><a href="/staffs?page=<%= Number(current) - 1%><%if (search == true){%>&&search=<%=search%><%}%>">First</a></li>
            <%}%>
            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
            <li class="disabled"><a>...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if (i == current) { %>
            <li class="active"><a><%= i %></a></li>
            <% } else { %>
            <li><a href="/staffs?page=<%= i %><%if(search == true){%>&&search=<%=search%><%}%>"><%= i %></a></li>
            <% } %>
            <% if (i == Number(current) + 4 && i < pages) { %>
            <li class="disabled"><a>...</a></li>
            <% } %>
            <% } %>
            
            <% if (current == pages) { %>
            <li class="disabled"><a>»</a></li>
            <% } else { %>
            <li><a href="/staffs?page=<%= Number(current) + 1 %><%if(search){%>&search=<%=search%><%}%>">»</a></li>
            <% } %>
            
            <% if (current == pages) { %>
            <li class="disabled"><a>Last</a></li>
            <% } else { %>
            <li><a href="/staffs?page=<%= pages %><%if(search){%>&search=<%=search%><%}%>">Last</a></li>
            <% } %>
        </ul>
        <% } %>
</div>

