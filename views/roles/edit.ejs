<% include ../partials/header.ejs%>
<div class="row">
    <div class="container-fluid">
        <div class="col-lg-3 col-md-3 col-sm-5 profileDiv">
            <div class="text-center profilePicDiv">
                <img src="<%= user.displayPic.image%>" class="img-thumbnail img-responsive profilePic" alt="<%=user.firstname%>'s picture" width="125" height="60">            
            </div>
            <div class="profileBodyDiv">
                <table class="row table">
                    <thead><th>Bio-Data</th></thead>
                    <tr>
                        <td>Name : </td>
                        <td><%= user.firstname%> <%= user.lastname%></td>
                    </tr>
                    <tr>
                        <td>Gender: </td>
                        <td><%= user.gender%></td>
                    </tr>
                    <tr>
                        <td>Date of Birth: </td>
                        <td><%= user.age%> yrs</td>
                    </tr>
                    <tr>
                        <td>State: </td>
                        <td><%= user.state%></td>
                    </tr>
                    <tr>
                        <td>LGA: </td>
                        <td><%= user.lga%></td>
                    </tr>
                    <tr>
                        <td>Address: </td>
                        <td><%= user.address%></td>
                    </tr>
                    <tr>
                        <td>Email: </td>
                        <td><%= user.email%></td>
                    </tr>
                    <tr>
                        <td>Home Address: </td>
                        <td><%= user.address%></td>
                    </tr>
                    <tr>
                        <td>Phone No: </td>
                        <td><%= user.phone%></td>
                    </tr>
                    <tr>
                        <td>Department: </td>
                        <td><%= user.department%></td>
                    </tr>
                    <tr>
                        <td>Date of First Appointment: </td>
                        <td><%= user.hire_date%></td>
                    </tr>
                    <tr>
                        <td>Marital Status: </td>
                        <td><%= user.marital_status%></td>
                    </tr>
                    <tr>
                        <td>Grade Level: </td>
                        <td><%= user.level%></td>
                    </tr>
                    <tr>
                        <td>Step: </td>
                        <td><%= user.step%></td>
                    </tr>
                </table>
                <div class="text-center">
                    <a class="btn btn-success btn-sm btn-edit" href="/user/<%= user._id%>/edit">Edit profile</a>                                    
                </div>
            </div>
        </div>
         <div class="col-lg-8 col-md-8 col-sm-6 contentDiv profileDiv">  
            <h2><%= user.firstname %> <%= user.lastname%> / <span class="level">Level: <%= user.level%></span></h2>
            <hr>
            <div>
                <h3>Edit <%= user.firstname%>'s Role</h3>
                <form class="form-inline" action="/user/<%=user._id%>/roles/<%= role._id%>?_method=PUT"  method="POST">
                    <div class="form-group col-lg-4 col-md-4 col-sm-4">
                        <input type="text" class="form-control" id="role" value="<%= role.text%>" name="role[text]" required>
                        <p class="roleErr validationError"></p>
                    </div>
                    <div class="text-right">
                        <button class="btn btn-success btn-sm qualBtns roleBtn" type="submit">Submit</button>                                    
                        <a class="btn btn-danger btn-sm qualBtns" href="/user/<%=user._id%>">Cancel</a>                                    
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs%>
