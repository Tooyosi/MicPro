<% include ./partials/header.ejs%>
<div class="row">
     <div class="col-lg-8 col-md-8 col-sm-6 col-lg-offset-2 col-md-offset-2 col-sm-offset-3 seal">
         <div class="col-lg-4 col-md-4 col-sm-8 col-lg-offset-4 col-md-offset-4 col-sm-offset-2 slide">    
            <form class="form-vertical" action="/reset/<%= token%>"  method="POST">
                <div class="form-group"> 
                  <label class="control-label " for="title">New Password :</label>
                    <input class="form-control"  type="password"  id="email" name="password">
                </div>
                <div class="form-group"> 
                    <label class="control-label " for="title">Confirm Password :</label>
                      <input class="form-control"  type="password"  id="email" name="confirm">
                  </div>
                <div class="text-right">
                    <button class="btn btn-success btn-sm btn-edit" type="submit">Update Password</button>                                    
            </div>
            </form>
        </div>
    </div>
</div>

