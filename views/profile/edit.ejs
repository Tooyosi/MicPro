<% include ../partials/header.ejs%>
<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-5 profileDiv">
        <div class="text-center profilePicDiv">
            <img src="<%= user.displayPic.image%>" class="img-thumbnail img-responsive profilePic" alt="<%=user.firstname%>'s picture" width="125" height="60">            
        </div>
        <div class="profileBodyDiv">
            <table class="row table">
                <thead><th>Bio-Data</th></thead>
                <tr>
                    <td>Name : </td>
                    <td><%= user.firstname%> <%= user.lastname%></td>
                </tr>
                <tr>
                    <td>Gender: </td>
                    <td><%= user.gender%></td>
                </tr>
                <tr>
                    <td>Date of Birth: </td>
                    <td><%= user.age%> yrs</td>
                </tr>
                <tr>
                    <td>State: </td>
                    <td><%= user.state%></td>
                </tr>
                <tr>
                    <td>LGA: </td>
                    <td><%= user.lga%></td>
                </tr>
                <tr>
                    <td>Address: </td>
                    <td><%= user.address%></td>
                </tr>
                <tr>
                    <td>Email: </td>
                    <td><%= user.email%></td>
                </tr>
                <tr>
                    <td>Home Address: </td>
                    <td><%= user.address%></td>
                </tr>
                <tr>
                    <td>Phone No: </td>
                    <td><%= user.phone%></td>
                </tr>
                <tr>
                    <td>Department: </td>
                    <td><%= user.department%></td>
                </tr>
                <tr>
                    <td>Date of First Appointment: </td>
                    <td><%= user.hire_date%></td>
                </tr>
                <tr>
                    <td>Marital Status: </td>
                    <td><%= user.marital_status%></td>
                </tr>
                <tr>
                    <td>Grade Level: </td>
                    <td><%= user.level%></td>
                </tr>
                <tr>
                    <td>Step: </td>
                    <td><%= user.step%></td>
                </tr>
            </table>
            <div class="text-center">
                <a class="btn btn-success btn-sm btn-edit" href="/user/<%= user._id%>/edit">Edit profile</a>                                    
            </div>
        </div>
    </div>
     <div class="col-lg-8 col-md-8 col-sm-6 contentDiv profileDiv">
        <h2><%= user.firstname %> <%= user.lastname%> / <span class="level">Level: <%= user.level%></span></h2>
        <hr>
          <form class="form-vertical" enctype="multipart/form-data" action="/user/<%=user._id%>?_method=PUT"  method="POST">
            <div class="text-center">
              <h3>Edit <%= user.firstname%>'s profile</h3>
            </div>
            <div class="form-group  col-lg-6 col-md-6 col-sm-6"> 
                <label class="control-label " for="firstname">Firstname:</label>
                <input type="text" class="form-control" id="firstname" value="<%= user.firstname%>" name="firstname" required>
              </div>
              <div class="form-group col-lg-6 col-md-6 col-sm-6"> 
                  <label class="control-label " for="lastname">Lastname:</label>
                  <input type="text" class="form-control" id="lastname" value="<%= user.lastname%>" name="lastname" required>
              </div>
              <div class="form-group col-lg-6 col-md-6 col-sm-6">
                    <label class="control-label" for="Phone no">Phone no:</label>
                    <input type="text" class="form-control" id="Phone" value="<%= user.phone%>" name="phone" required>
              </div>
              <div class="form-group col-lg-6 col-md-6 col-sm-6">
                  <label class="control-label" for="Photo">Choose Profile Picture:</label>
                  <input type="file" class="form-control" id="Picture" value="<%= user.displayPic.image%>" accept="image/*" name="picture" required>
                  <input class="cloudinary-input" type="text"  value="<%= user.displayPic.image_id%>" name="image_id">
                </div>
              <div class="form-group col-lg-6 col-md-6 col-sm-6">
                  <label class="control-label" for="gender">Gender:</label>
                  <select class="form-control" name="gender" id="gender" required>
                    <option selected disabled>Select your Gender</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                  </select>
              </div>
              <div class="form-group col-lg-6 col-md-6 col-sm-6">
                <label class="control-label" for="state">State:</label>
                <select class="form-control" name="state" id="state" required>
                  <option selected disabled >Select your state</option>
              </select>
            </div>
            <div class="form-group col-lg-6 col-md-6 col-sm-6">
              <label class="control-label" for="Username">LGA:</label>
              <select class="form-control" name="lga" id="lga" required>
                  <option selected disabled >Select your LGA</option>
            </select>
            </div>
              <div class="form-group col-lg-6 col-md-6 col-sm-6">
                  <label class="control-label" for="age">Date Hired:</label>
                  <input type="date" class="form-control" id="age" step="1" min="1"  name="age" required>
              </div>
              <div class="form-group col-lg-6 col-md-6 col-sm-6">
                <label class="control-label" for="age">Marital Status :</label>
                <select name="marital_status" id="" class="form-control" required>
                  <option selected disabled >Select your Marital Status</option>
                  <option value="Single">Single</option>
                  <option value="Married">Married</option>
                  <option value="Divorced">Divorced</option>
                  <option value="Seperated">Seperated</option>
                  <option value="Widowed">Widowed</option>
                </select>  
              </div>
              <div class="form-group col-lg-6 col-md-6 col-sm-6">
                  <label class="control-label" for="level">Grade Level:</label>
                  <input type="number" class="form-control" id="level" step="1" min="1" name="level" required>
              </div>
              <div class="form-group col-lg-6 col-md-6 col-sm-6">
                <label class="control-label" for="level">Step:</label>
                  <input type="number" class="form-control" id="step" step="1" min="1"  name="step" required>
              </div>
              <div class="form-group col-lg-6 col-md-6 col-sm-6">
                <label class="control-label" for="Department">Department:</label>
                  <input type="text" class="form-control" id="dept" value="<%= user.department%>" name="dept" required>
              </div>
              <div class="form-group col-lg-10 col-md-10 col-sm-10">
                <label for="address">Address:</label>
                <textarea class="form-control" rows="5" id="address" name="address" required>
                    <%= user.address%>
                </textarea>
              </div>
              <div class="form-group col-lg-11 col-md-11 col-sm-11 text-right">
                  <button type="submit" class="btn btn-success btn-sm">Update</button>
                  <a class="btn btn-danger btn-sm" href="/user/<%=user._id%>">Back</a>
            </div>
         </form> 
    </div>
</div>

<% include ../partials/footer.ejs%>

