<% include ../partials/header.ejs%>
<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-5 profileDiv">
        <div class="text-center profilePicDiv">
            <img src="<%= user.displayPic.image%>" class="img-thumbnail img-responsive profilePic" alt="<%=user.firstname%>'s picture" width="125" height="60">            
        </div>
        <div class="profileBodyDiv">
            <table class="row table">
                <thead><th>Bio-Data</th></thead>
                <tr>
                    <td>Name : </td>
                    <td><%= user.firstname%> <%= user.lastname%></td>
                </tr>
                <tr>
                    <td>Gender: </td>
                    <td><%= user.gender%></td>
                </tr>
                <tr>
                    <td>Age: </td>
                    <td><%= user.age%> yrs</td>
                </tr>
                <tr>
                    <td>State: </td>
                    <td><%= user.state%></td>
                </tr>
                <tr>
                    <td>LGA: </td>
                    <td><%= user.lga%></td>
                </tr>
                <tr>
                    <td>Address: </td>
                    <td><%= user.address%></td>
                </tr>
                <tr>
                    <td>Email: </td>
                    <td><%= user.email%></td>
                </tr>
                <tr>
            </table>
            <div class="text-center">
                <a class="btn btn-success btn-sm btn-edit" href="/user/<%= user._id%>/edit">Edit profile</a>                                    
            </div>
        </div>
    </div>
     <div class="col-lg-8 col-md-8 col-sm-6 contentDiv profileDiv">
        <h2><%= user.firstname %> <%= user.lastname%> / <span class="level">Level: <%= user.level%></span></h2>
        <hr>
          <form class="form-vertical" enctype="multipart/form-data" action="/user/<%=user._id%>?_method=PUT"  method="POST">
            <div class="text-center">
              <h3>Edit <%= user.firstname%>'s profile</h3>
            </div>
            <div class="form-group  col-lg-6 col-md-6 col-sm-6"> 
                <label class="control-label " for="firstname">Firstname:</label>
                <input type="text" class="form-control" id="firstname" value="<%= user.firstname%>" name="firstname" required>
              </div>
              <div class="form-group col-lg-6 col-md-6 col-sm-6"> 
                  <label class="control-label " for="lastname">Lastname:</label>
                  <input type="text" class="form-control" id="lastname" value="<%= user.lastname%>" name="lastname" required>
              </div>
              <div class="form-group col-lg-6 col-md-6 col-sm-6">
                    <label class="control-label" for="Phone no">Phone no:</label>
                    <input type="text" class="form-control" id="Phone" value="<%= user.phone%>" name="phone" required>
              </div>
              <div class="form-group col-lg-6 col-md-6 col-sm-6">
                  <label class="control-label" for="Photo">Choose Profile Picture:</label>
                  <input type="file" class="form-control" id="Picture" value="<%= user.displayPic.image%>" accept="image/*" name="picture">
                  <input class="cloudinary-input" type="text"  value="<%= user.displayPic.image_id%>" name="image_id">
                </div>
              <div class="form-group col-lg-6 col-md-6 col-sm-6">
                  <label class="control-label" for="gender">Gender:</label>
                  <select class="form-control" name="gender" id="gender" required>
                    <option selected disabled>Select your Gender</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                  </select>
              </div>
              <div class="form-group col-lg-6 col-md-6 col-sm-6">
                  <label class="control-label" for="age">Age:</label>
                  <input type="number" class="form-control" id="age" step="1" min="1" value="<%= user.age%>" name="age" required>
              </div>
              <div class="form-group col-lg-6 col-md-6 col-sm-6">
                  <label class="control-label" for="level">Level:</label>
                  <input type="number" class="form-control" id="level" step="1" min="1" value="<%= user.level%>" name="level" required>
              </div>
              <div class="form-group col-lg-11 col-md-11 col-sm-11 text-right">
                  <button type="submit" class="btn btn-success btn-sm">Update</button>
                  <a class="btn btn-danger btn-sm" href="/user/<%=user._id%>">Back</a>
            </div>
            </div>
         </form> 
    </div>
</div>

<% include ../partials/footer.ejs%>

